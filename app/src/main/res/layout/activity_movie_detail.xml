<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/all_padding">

        <ImageView
            android:id="@+id/imageview_main_movieposter"
            android:layout_width="100dp"
            android:contentDescription="null"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/textview_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/imageview_main_movieposter" />

        <TextView
            android:id="@+id/textview_detail_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toRightOf="@+id/imageview_main_movieposter"
            app:layout_constraintTop_toBottomOf="@id/textview_detail_title" />

        <TextView
            android:id="@+id/textview_detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toRightOf="@+id/imageview_main_movieposter"
            app:layout_constraintTop_toBottomOf="@id/textview_detail_release" />

        <TextView
            android:id="@+id/textview_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/imageview_main_movieposter" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>