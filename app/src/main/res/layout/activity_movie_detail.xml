<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/all_padding">

        <ImageView
            android:id="@+id/imageview_main_movieposter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_margin"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imageview_main_movieposter"
            tools:text="Title" />

        <TextView
            android:id="@+id/textview_detail_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_margin"
            app:layout_constraintTop_toBottomOf="@id/textview_detail_title"
            tools:text="Release" />

        <TextView
            android:id="@+id/textview_detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_margin"
            app:layout_constraintTop_toBottomOf="@id/textview_detail_release"
            tools:text="Rating" />

        <TextView
            android:id="@+id/textview_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_margin"
            app:layout_constraintTop_toBottomOf="@id/textview_detail_rating"
            tools:text="Description" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>